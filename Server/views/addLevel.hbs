            {
                alert("不能有空的选项");
                return;
            }
        }
        content.enemy =arrEnemy;
        xhr=new XMLHttpRequest();
        xhr.onreadystatechange=state_Edit;
        xhr.open("PUT","addLevel",true);
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.send(JSON.stringify(content));
